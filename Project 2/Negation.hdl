/**
 * Negate a 16-bit number, be aware that first bit is the sign-bit. 
 * 2â€™s complement of the input 
 */

CHIP Negation {
    IN in[16];
    OUT out[16];

    PARTS:
	
    // Outputs 2's complement of input
    Not16(in=in, out=tempOut);
    Inc16(in=tempOut, out=out);

}